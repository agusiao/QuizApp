<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agusiao.apps.quizapp.About">

    <TextView
        android:id="@+id/ABT_LBL_Author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/author"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ABT_LBL_App" />


    <ImageView
        android:id="@+id/ABT_IV_Q1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MARGIN_STD"
        android:layout_marginRight="@dimen/MARGIN_STD"
        android:layout_marginTop="@dimen/MARGIN_STD"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ABT_IV_Q2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_question_open" />

    <ImageView
        android:id="@+id/ABT_IV_Q2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MARGIN_STD"
        android:layout_marginRight="@dimen/MARGIN_STD"
        android:layout_marginTop="@dimen/MARGIN_STD"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/ABT_IV_Q1"
        app:layout_constraintRight_toLeftOf="@+id/ABT_IV_Q3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_question_yesno" />

    <ImageView
        android:id="@+id/ABT_IV_Q3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MARGIN_STD"
        android:layout_marginRight="@dimen/MARGIN_STD"
        android:layout_marginTop="@dimen/MARGIN_STD"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/ABT_IV_Q2"
        app:layout_constraintRight_toLeftOf="@+id/ABT_IV_Q4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_question_multiple" />

    <ImageView
        android:id="@+id/ABT_IV_Q4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MARGIN_STD"
        android:layout_marginRight="@dimen/MARGIN_STD"
        android:layout_marginTop="@dimen/MARGIN_STD"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/ABT_IV_Q3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_question_one" />

    <TextView
        android:id="@+id/ABT_LBL_App"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/MARGIN_STD"
        android:text="@string/app_name"
        android:textSize="@dimen/TEXT_SIZE_BIG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ABT_IV_Q2" />

</android.support.constraint.ConstraintLayout>
